<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!--  android:scaleType="fitXY" -->
    <com.crabfibber.fccamalbum.view.CustomPreviewImageView 
        android:id="@+id/custom_preview_iamge"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/preview_bottom_layout"
        />
    
    <ImageView 
        android:id="@+id/preview_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/preview_bottom_layout"
		android:visibility="gone"
        />
    
    <RelativeLayout 
        android:id="@+id/preview_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/origin_photo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#FFFFFF"
            android:text="origin_photo"
            android:visibility="invisible"
            />
        <CheckBox 
            android:id="@+id/photo_selected"
            
            android:layout_centerVertical="true"
            android:text="选择"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>
